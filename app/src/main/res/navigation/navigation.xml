<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/add_client">
    <fragment
        android:id="@+id/add_client"
        android:name="com.example.mathieuetthomas.AddClient"
        android:label="fragment_add_client"
        tools:layout="@layout/fragment_add_client" >
        <action
            android:id="@+id/action_add_client_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/home"
        android:name="com.example.mathieuetthomas.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_add_client"
            app:destination="@id/add_client" />
        <argument
            android:name="nomSaisi"
            app:argType="string" />
        <argument
            android:name="prenomSaisi"
            app:argType="string" />
        <argument
            android:name="dateSaisie"
            app:argType="string" />
        <argument
            android:name="villeSaisie"
            app:argType="string" />
    </fragment>
</navigation>